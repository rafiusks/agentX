# Frontend Configuration
VITE_API_URL=http://localhost:3000/api/v1

# Backend Server Configuration
AGENTX_PORT=3000
AGENTX_HOST=0.0.0.0
AGENTX_CORS_ORIGINS=http://localhost:5173,http://localhost:3001

# Database Configuration (for local development)
# These are only used if you're not using Docker for PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=agentx
POSTGRES_PASSWORD=agentx
POSTGRES_DB=agentx

# Note: API keys are now stored securely in the database
# Configure them through the web UI after starting the application

# Feature Flags
# Set to 'true' to enable features

# Context Memory System - Stores persistent knowledge across conversations
# Note: Requires backend implementation and authentication
VITE_FEATURE_CONTEXT_MEMORY=false

# Canvas Mode - Side-by-side document/code editing
VITE_FEATURE_CANVAS_MODE=true

# Smart Response Actions - Format-aware clipboard and transformations
VITE_FEATURE_SMART_ACTIONS=false

# Proactive AI Suggestions
VITE_FEATURE_AI_SUGGESTIONS=false

# Smart Model Routing based on task type
VITE_FEATURE_MODEL_ROUTING=false

# Require authentication for all features
VITE_REQUIRE_AUTH=false